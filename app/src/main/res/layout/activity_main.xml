<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/main_radio_sunny"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/main_top_title"
            android:textColor="@color/whiter"
            android:textSize="@dimen/text_size_twenty" />

        <TextView
            android:id="@+id/main_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_top_temperature"
            android:textColor="@color/whiter"
            android:textSize="@dimen/text_size_thirty_two" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/weather_qing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#35000000"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/MainWeatherImageView"
                android:src="@drawable/main_location" />

            <TextView
                style="@style/MainWeatherTextView"
                android:text="北京市" />

            <ImageView
                style="@style/MainWeatherImageView"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weather_qing" />

            <TextView
                style="@style/MainWeatherTextView"
                android:text="2016.7.20" />

            <TextView
                style="@style/MainWeatherTextView"
                android:layout_marginLeft="5dp"
                android:text="星期三" />

            <ImageView
                style="@style/MainWeatherImageView"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weather_qing" />

            <TextView
                style="@style/MainWeatherTextView"
                android:text="111轻度污染" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/whiter"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/loading_0" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:text="智慧超市，全程无线上网" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_marginLeft="15dp"
            android:text="2016.7.20" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/loading_0" />
    </LinearLayout>

    <include layout="@layout/include_main_bottom"/>
</LinearLayout>
